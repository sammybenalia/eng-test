<% set_meta_tags :description => "An Art Blog that focuses on contemporary art"%>
<div class="notice">
<%= flash[:notice]%>
</div>

<%@posts.each do |post|%>

<div class="entry">

<div class="row-fluid">
	<div class="span12 postAuthor">
		<a class="headerPost" href="<%=posts_path(post)%>"><h3><%=post.title%></h3></a>
		<p><%= link_to "#{post.user.fullname}", author_path(post.user.username), :class => "userLink"%></p>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<%=image_tag(post.featured_image)%>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<p class="entry_text">
			<%= post.content.html_safe%>
		</p>
	</div>
</div>
<div class="row-fluid">
	<div class="span5">
		<p><%= tag_list(post)%></p>
	</div>
	<div class="span5"><%= render 'layouts/like', :post => post %><p id="like"><a href="<%= posts_path(post)+'#disqus_thread'%>">Comments</a></p></div>
	<div class="span2">
		<p class="post_date"> <%= date(post.created_at)%></p>
	</div>
</div>
</div>
<%end%>
<%= paginate @posts%>

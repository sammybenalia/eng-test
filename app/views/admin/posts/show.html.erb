
<div class="entry">

<div class="row-fluid">
	<div class="span12 postAuthor">
		<h3><%=@post.title%></h3>	
		<p><%= @post.user.first_name%></p>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<%=image_tag(@post.featured_image)%>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<p class="entry_text">
			<%= @post.content%>
		</p>
	</div>
</div>
<div class="row-fluid">
	<div class="span5">
		<p><%= tag_list(@post)%></p>
	</div>
	<div class="span5"><%= render 'layouts/like'%></div>
	<div class="span2">
		<p class="@post_date"> <%= date(@post.created_at)%></p>
	</div>
</div>
</div>
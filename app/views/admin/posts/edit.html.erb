<% if @post.errors %>
	<% @post.errors.full_messages.each do |msg|%>
	<%= msg%>
	<%end%>
<%end%>
<%= form_for [:admin, @post] do |p|%>
<%= p.label :title%><br/>
<%= p.text_field :title%><br/>
<%= p.label :content%><br/>
<%= p.text_area :content%><br/>
<%= p.label :tag_list, "Tags"%><br/>
<%= p.text_field :tag_list%><br/>
<%= p.label :description%> 160 Characters Max<br/>
<%= p.text_area :description, :size => "5x10"%><span id="count">Characters Remaining: </span><br/>
<%= p.label :featured_image, "Featured Image: "%><br/>
<%= p.file_field :featured_image%><br/>
<%= p.label :caption, "Photo Caption: "%><br/>
<%= p.text_field :caption%><br/>

Publish: <%= p.check_box :published%><br/>
Publish Later: <%= p.date_select :publish_time %> Time: <%= p.time_select :publish_time, :ignore_date => true%><br/>
<%= p.submit "Save and Publish"%>
<% end %>
<div class="row-fluid">
	<div class="span2">
<%= render 'admin/dashboard/navbar'%>	
	</div>
	<div class="span10 topPadding">

<% if @link.errors %>
	<% @link.errors.full_messages.each do |msg|%>
	<%= msg%>
	<%end%>
<%end%>
<%= form_for [:admin, @link] do |c|%>
	<%= c.label :title%>
	<%= c.text_field :title%><br/>
	<%= c.label :url%>
	<%= c.text_field :url%><br/>
	<%= c.label :remarks%>
	<%= c.text_field :remarks%><br/>
	<%= c.submit "Save"%>
<%end%>
</div>
</div>